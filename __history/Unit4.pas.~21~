unit Unit4;

interface

uses
  Winapi.Windows, Winapi.Messages, System.SysUtils, System.Variants, System.Classes, Vcl.Graphics,
  Vcl.Controls, Vcl.Forms, Vcl.Dialogs, Vcl.ComCtrls, Math, Vcl.StdCtrls,
  Vcl.ExtCtrls;

type
  TForm4 = class(TForm)
    PageControl1: TPageControl;
    tsLogin: TTabSheet;
    tsRegister: TTabSheet;
    tsOptions: TTabSheet;
    pnlLogin: TPanel;
    pnlHeading1: TPanel;
    lblUsername: TLabel;
    lblLPassword: TLabel;
    Button1: TButton;
    Panel1: TPanel;
    Button2: TButton;
    procedure FormCreate(Sender: TObject);
    procedure Button1Click(Sender: TObject);
    procedure Button2Click(Sender: TObject);
  private
    { Private declaratio
    Edit1: TEdit;ns }
    procedure ShowOnly(ATab: TTabSheet);
  public
    { Public declarations }
  end;

var
  Form4: TForm4;

implementation

{$R *.dfm}

procedure TForm4.ShowOnly(ATab: TTabSheet);
var
  i: Integer;
begin
  for i := 0 to PageControl1.PageCount - 1 do
    PageControl1.Pages[i].TabVisible := (PageControl1.Pages[i] = ATab);
  PageControl1.ActivePage := ATab;
end;

procedure TForm4.Button1Click(Sender: TObject);
begin
 PageControl1.ActivePage := tsRegister;
 tsRegister.TabVisible := true;
 tsLogin.TabVisible := false;
 tsOptions.TabVisible := false;
end;

procedure TForm4.Button2Click(Sender: TObject);
begin
 PageControl1.ActivePage := tsLogin;
 tsLogin.Tabvisible := true;
 tsOptions.Tabvisible := false;
end;

procedure TForm4.FormCreate(Sender: TObject);
begin
  pnlLogin.caption := '';
  pnlHeading1.caption := 'Login or Sign up';
  pnlHeading1.font.size := 15;

  lblUsername.caption := 'Username';
  PageControl1.ActivePage := tsLogin;
  tsRegister.TabVisible := False;
  tsOptions.TabVisible := false;
end;


end.
